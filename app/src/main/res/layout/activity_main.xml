<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_flat_card"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="add flag card" />

    <Button
        android:id="@+id/button_andy"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_flat_card"
        android:text="add andy" />

    <Button
        android:id="@+id/button_shape"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_andy"
        android:text="add simple shape" />

    <Button
        android:id="@+id/button_runtime"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_shape"
        android:text="add model at runtime" />

    <Button
        android:id="@+id/button_video_recording"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_runtime"
        android:text="video recording" />

    <Button
        android:id="@+id/button_add_object_in_the_air"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_video_recording"
        android:text="add object in the air" />

    <Button
        android:id="@+id/button_add_object_in_the_air2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_add_object_in_the_air"
        android:text="add object in the air2" />

</RelativeLayout>